<main class="container mt-5">
  <h1>Shopping Cart</h1>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      {{#link-to "index"}}Home{{/link-to}}
    </li>
    <li class="breadcrumb-item">Shopping Cart</li>
  </ol>

  {{#each this.cart.itemList as |item|}}
    <div class="cart-item d-flex align-items-center">
      <div class="cart-item-thumbnail">
        <img src={{item.image}} alt="">
      </div>
      <div class="ml-3">
        <h4>{{item.name}}</h4>
        {{!-- custom helpers skipped --}}
        {{!-- <i class="font-weight-bold">{{currency item.price}}</i> --}}
      </div>
      <input
        type="number"
        class="ml-auto"
        value={{item.count}}
        {{!-- the following line passes new value as first arg --}}
        {{!-- oninput={{action "updateItemCount" item value="target.value"}} --}}
        oninput={{action "updateItemCount" item}}
        {{!-- the following line does same thing as above line --}}
        {{!-- {{action "updateItemCount" item on="input"}} --}}
      >
    </div>
  {{/each}}

  <section class="w-50 ml-auto text-right mb-5">
    <div class="row">
      <span class="col">Subtotal</span>
      <span class="col">{{this.subtotal}}</span>
    </div>
    <div class="row">
      <span class="col">Tax</span>
      <span class="col">{{this.tax}}</span>
    </div>
    <div class="row">
      <span class="col">Total</span>
      <span class="col">{{this.total}}</span>
    </div>
  </section>

  <button type="button" class="btn btn-success float-right">
    Check out
  </button>
</main>